<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Publish workspace</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="container flex">
      <nav id="nav" class="nav basis-64 bg-gray-800 px-1 py-3 text-sm text-slate-50">
        <ul>
          <% for (const [project, pages] of Object.entries(projects)) { %>
          <li class="py-1 px-3"><%= project %></li>
          <ul>
            <% for (const [page, path] of Object.entries(pages)) { %>
            <li>
              <button class="sub py-1 px-3" type="button" data-href="<%= path %>"><%= page %></button>
            </li>
            <% } %>
          </ul>
          <% } %>
        </ul>
      </nav>
      <div class="main grow flex flex-col">
        <div class="basis-10 bg-slate-200">
          <a id="currentPath" href="" target="__blank"></a>
        </div>
        <iframe id="iframe" class="grow" src=""></iframe>
      </div>
    </div>
    <script src="main.js"></script>
  </body>
</html>
